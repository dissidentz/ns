---
/**
 * InnerHero component - reusable hero banner
 */
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";
const { title = "Default Title" } = Astro.props;
---

<section class="innerhero-section">
  <div class="container mx-auto py-4 relative">
    <div class="row">
      <h1 class="text-white">{title}</h1>
      <Breadcrumbs />
    </div>
  </div>
</section>

<style>
  .innerhero-section {
    margin-top: 100px;
    background: rgb(42, 53, 70);
    text-align: left;
    color: #ffffff;
  }
  .innerhero-section h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
</style>
