---
// /src/layouts/InnerPageLayout.astro
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import InnerHero from "../components/sections/InnerHero.astro";

export interface Props {
  pageTitle: string;
  pageDescription: string;
  pageImage?: string;
  innerTitle: string;
}

const { pageTitle, pageDescription, pageImage, innerTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} image={pageImage} />
  </head>
  <body>
    <Header />
    <InnerHero title={innerTitle} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
