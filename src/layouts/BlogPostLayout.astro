---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import InnerHero from "../components/sections/InnerHero.astro"; // ADD THIS LINE
import { SITE_NAME } from "../data/site";

const { frontmatter } = Astro.props;
const { title, description, pubDate, updatedDate, author, image, tags } = frontmatter;

// Format dates
const formattedPubDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const formattedUpdatedDate = updatedDate
  ? new Date(updatedDate).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} - ${SITE_NAME}`} description={description} />
  </head>
  <body>
    <Header />

    <!-- ADD THIS LINE - InnerHero for consistency -->
    <InnerHero title={title} />

    <main id="main-content" data-pagefind-body>
      <article class="container py-5">
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <!-- Featured Image (if exists) -->
            {image && <img src={image} alt={title} class="img-fluid rounded mb-4" loading="lazy" />}

            <!-- Article Metadata -->
            <div class="mb-4">
              <div class="d-flex flex-wrap gap-3 text-muted small mb-3">
                <span>
                  <i class="bi bi-calendar3 me-1"></i>
                  Published {formattedPubDate}
                </span>
                {
                  formattedUpdatedDate && (
                    <span>
                      <i class="bi bi-arrow-clockwise me-1" />
                      Updated {formattedUpdatedDate}
                    </span>
                  )
                }
                <span>
                  <i class="bi bi-person-circle me-1"></i>
                  {author}
                </span>
              </div>

              <!-- Tags -->
              {
                tags && tags.length > 0 && (
                  <div class="mb-3">
                    {tags.map((tag: string) => (
                      <a href={`/blog/tags/${tag}`} class="badge bg-primary text-decoration-none me-2">
                        {tag}
                      </a>
                    ))}
                  </div>
                )
              }
            </div>

            <!-- Article Content -->
            <div class="prose">
              <slot />
            </div>

            <!-- Social Sharing -->
            <div class="mt-5 pt-4 border-top">
              <h3 class="h6 mb-3">Share this article:</h3>
              <div class="d-flex gap-2">
                <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="btn btn-outline-primary btn-sm">
                  <i class="bi bi-twitter me-1"></i>
                  Twitter
                </a>
                <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="btn btn-outline-primary btn-sm">
                  <i class="bi bi-facebook me-1"></i>
                  Facebook
                </a>
              </div>
            </div>

            <!-- Back to Blog -->
            <div class="mt-4">
              <a href="/blog" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>
                Back to Blog
              </a>
            </div>
          </div>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
