---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Welcome from "../components/Welcome.astro";
import HeroSection from "../components/sections/Hero.astro";

const pageTitle = "About Us - Your Company Name";
const pageDescription = "Learn more about Your Company Name, our mission, vision, and the team driving innovation.";
const pageImage = "/images/about-page-og.jpg"; // Replace with your actual social share image URL
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} image={pageImage} />
  </head>
  <body>
    <Header />
    <HeroSection />
    <Welcome />
    <Footer />

    <div class="container py-5">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Hello, Astro!</h5>
              <p class="card-text">This is a Bootstrap card.</p>
              <button class="btn btn-primary">Click Me</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
